{
    //"extends": "./tsconfig.json",
    "compileOnSave": false,
    "compilerOptions": {
        "downlevelIteration": true,
        "rootDir": "../",
        "baseUrl": "",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "mapRoot": "src",
        "module": "es2020",
        "moduleResolution": "node",
        "outDir": "dist/out-tsc",
        "sourceMap": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
          "jasmine",
          "core-js",
          "node"
        ]
    },
  "files": [
    "main.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "./polyfills.ts"
  ]
}
